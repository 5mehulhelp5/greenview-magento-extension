<?xml version="1.0" encoding="UTF-8"?>
<!--
/**
 * Widget Configuration
 *
 * @category   GreenView
 * @package    GreenView_Viewer
 */
-->
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">

    <!-- 3D Viewer Widget -->
    <widget id="greenview_3d_viewer" class="GreenView\Viewer\Block\Widget\Viewer" is_email_compatible="false">
        <label translate="true">GreenView 3D Viewer</label>
        <description translate="true">Display a 3D Splat viewer</description>
        <parameters>
            <parameter name="slug" xsi:type="text" required="true" visible="true" sort_order="10">
                <label translate="true">Splat Slug</label>
                <description translate="true">Enter the slug of the splat to display</description>
            </parameter>
            <parameter name="width" xsi:type="text" visible="true" sort_order="20">
                <label translate="true">Width</label>
                <description translate="true">Viewer width (e.g., 100%, 500px). Default: 100%</description>
                <value>100%</value>
            </parameter>
            <parameter name="height" xsi:type="text" visible="true" sort_order="30">
                <label translate="true">Height</label>
                <description translate="true">Viewer height (e.g., 400px, 50vh). Default: 400px</description>
                <value>400px</value>
            </parameter>
            <parameter name="animate" xsi:type="select" visible="true" sort_order="40">
                <label translate="true">Enable Animation</label>
                <description translate="true">Enable auto-rotation animation</description>
                <options>
                    <option name="yes" value="1" selected="false">
                        <label translate="true">Yes</label>
                    </option>
                    <option name="no" value="0" selected="true">
                        <label translate="true">No</label>
                    </option>
                </options>
            </parameter>
        </parameters>
    </widget>

    <!-- AR Button Widget -->
    <widget id="greenview_ar_button" class="GreenView\Viewer\Block\Widget\ArButton" is_email_compatible="false">
        <label translate="true">GreenView AR Button</label>
        <description translate="true">Display an AR button for mobile viewing</description>
        <parameters>
            <parameter name="slug" xsi:type="text" required="true" visible="true" sort_order="10">
                <label translate="true">Splat Slug</label>
                <description translate="true">Enter the slug of the splat for AR</description>
            </parameter>
            <parameter name="text" xsi:type="text" visible="true" sort_order="20">
                <label translate="true">Button Text</label>
                <description translate="true">Text to display on the button</description>
                <value>Discover AR</value>
            </parameter>
            <parameter name="bg_color" xsi:type="text" visible="true" sort_order="30">
                <label translate="true">Background Color</label>
                <description translate="true">Button background color (hex code)</description>
                <value>#38585a</value>
            </parameter>
            <parameter name="border_color" xsi:type="text" visible="true" sort_order="40">
                <label translate="true">Border Color</label>
                <description translate="true">Button border color (hex code)</description>
                <value>#38585a</value>
            </parameter>
            <parameter name="text_color" xsi:type="text" visible="true" sort_order="50">
                <label translate="true">Text Color</label>
                <description translate="true">Button text color (hex code)</description>
                <value>#38585a</value>
            </parameter>
            <parameter name="width" xsi:type="text" visible="true" sort_order="60">
                <label translate="true">Button Width</label>
                <description translate="true">Button width (e.g., 235px)</description>
                <value>235px</value>
            </parameter>
        </parameters>
    </widget>

</widgets>
